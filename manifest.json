{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Lumos",
    "description": "A web-based LLM co-pilot for browsing the web. Your prompts never leave the browser.",
    "action": {
        "default_popup": "js/index.html",
        "default_title": "Lumos"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"]
        }
    ],
    "permissions": [
        "tabs"
    ]
}